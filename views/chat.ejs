<% layout('layout') %>

<%- include("modules/header.ejs") %>

<main class="container-xxl py-4">
  <h1 class="h3 mb-3">Чаты</h1>
  <div class="card rounded-4">
    <div class="card-body">
      <div id="messages" class="d-flex flex-column gap-2" style="height:50vh; overflow:auto;"></div>
      <form id="chatForm" class="mt-3 d-flex gap-2">
        <input id="chatInput" class="form-control rounded-4" placeholder="Сообщение" autocomplete="off" />
        <button class="btn btn-primary rounded-4" type="submit">Отправить</button>
      </form>
    </div>
  </div>
</main>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();
  const list = document.getElementById('messages');
  const form = document.getElementById('chatForm');
  const input = document.getElementById('chatInput');

  const renderMsg = (m) => {
    const div = document.createElement('div');
    div.className = 'p-2 rounded-4 border';
    const time = new Date(m.ts).toLocaleTimeString();
    div.textContent = `[${time}] ${m.user}: ${m.text}`;
    list.appendChild(div);
    list.scrollTop = list.scrollHeight;
  };

  socket.on('chat:history', (messages) => {
    list.innerHTML = '';
    messages.forEach(renderMsg);
  });
  socket.on('chat:new', renderMsg);

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const text = input.value.trim();
    if (!text) return;
    socket.emit('chat:message', text);
    input.value = '';
  });
</script>

